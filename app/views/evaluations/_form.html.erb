<%= form_with(model: evaluation, local: true, url: submit_evaluation_path(projectId: evaluation.project_id, teamMemberId: evaluation.team_member_id) ) do |form| %>
  <% if evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
        <% evaluation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score, in: 1..10, step: 1 %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <% if project %>
      <%= project.name %>
      <%= form.hidden_field :project_id %>
    <% else %>
      <%= form.text_field :project_id %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :team_member_id %>
    <% if member %>
      <%= member.email %>
      <%= form.hidden_field :team_member_id %>
    <% else %>
      <%= form.text_field :team_member_id %>
    <% end %>
  </div>



  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>
