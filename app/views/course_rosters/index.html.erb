<p id="notice"><%= notice %></p>

<h1>Course Roster</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_rosters.each do |course_roster| %>
      <tr>
        <td><%= course_roster.course.name %></td>
        <td><%= course_roster.user.email %></td>
        <td><%= link_to 'Show', course_roster %></td>
        <td><%= link_to 'Edit', edit_course_roster_path(course_roster) %></td>
        <td><%= link_to 'Destroy', course_roster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

